<div class='row'>
  <div class='col-md-6 offset-md-3'>
      <%= link_to 'Crear ToDo', new_todo_path, class: 'btn btn-info card card-body bg-success text-dark MB MT' %>
      <% @todos.each do |t| %>
        <div class='card card-body bg-dark MB'>
          <div class='list-group-item text-center'>
            <p> <%= t.description %> </p>
          </div>
          <%= link_to 'Ver', todo_path(t), class: 'btn btn-info' %>
          <%= link_to 'Editar', edit_todo_path(t), class: 'btn btn-warning' %>
          <%= link_to 'Borrar', todo_path(t), method: :delete, class: 'btn btn-danger' %>
          <% if t.completed == false %>
            <%= link_to 'Completar', complete_todo_path(t), class: 'btn btn-secondary' %>
          <% end %>
        </div>
      <% end %>
  </div>
</div>
