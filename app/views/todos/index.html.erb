<div class='row'>
  <div class='col-md-6 offset-md-3'>
    <ul class="card card-body bg-dark">
      <%= link_to 'Crear ToDo', todos_new_path, class: 'btn btn-success' %>
      <% @todos.each do |t| %>
        <li class='list-group-item'>
          <p> <%= t.description %> </p>
        </li>
        <%= link_to 'Ver ToDo', todos_path, class: 'btn btn-info' %>
      <% end %>
    </ul>
  </div>
</div>
